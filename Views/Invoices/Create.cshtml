@using InvoiceManagementSystem.ViewModels
@model InvoiceCreateVm
@{
    Layout = "_Layout";
    ViewData["Title"] = "Crear Nueva Factura";
}

<div class="container-fluid py-4">
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <h5 class="alert-heading"><i class="bi bi-exclamation-triangle-fill"></i> Error en la Transacción</h5>
            <hr>
            @Html.Raw(TempData["ErrorMessage"])
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <h5 class="alert-heading"><i class="bi bi-exclamation-triangle-fill"></i> Errores de Validación</h5>
            <hr>
            <ul class="mb-0">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="text-center mb-4">
        <h1 class="display-5 fw-bold">DATOS DE LA COMPRA</h1>

        <div class="d-flex justify-content-between align-items-center mt-3 px-5">
            <div class="text-start">
                <h3 class="text-primary mb-0">Nº Factura: <span class="text-dark fw-bold">@Model.NextInvoiceNumber.ToString("D6")</span></h3>
            </div>
            <div class="text-end">
                <h3 class="text-primary mb-0">Fecha: <span class="text-dark fw-bold">@DateTime.Now.ToString("dd/MM/yyyy HH:mm")</span></h3>
            </div>
        </div>

        <hr class="border border-dark border-2 opacity-75 mt-3" />
    </div>

    <div class="card shadow-lg border-0">
        <div class="card-body p-4">
            <form id="invoiceForm" method="post" asp-action="Create">

                <div class="card border-primary mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="bi bi-person-circle"></i> Datos del Cliente</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <button type="button" class="btn btn-primary btn-lg w-100" data-bs-toggle="modal" data-bs-target="#customerModal">
                                <i class="bi bi-search"></i> BUSCAR CLIENTE
                            </button>
                        </div>

                        <div class="card bg-light p-3" id="selectedCustomerCard" style="display:@(Model.CustomerID.HasValue && Model.CustomerID.Value != 0 ? "block" : "none");">
                            <h6 class="text-success mb-3"><i class="bi bi-check-circle"></i> Cliente Seleccionado</h6>
                            <div class="row">
                                <div class="col-md-2">
                                    <strong>ID:</strong>
                                    <p id="displayCustomerId" class="mb-0">@(Model.CustomerID.HasValue ? Model.CustomerID.Value.ToString() : "-")</p>
                                    <input type="hidden" id="CustomerID" name="CustomerID" value="@(Model.CustomerID.HasValue ? Model.CustomerID.Value : 0)" />
                                </div>
                                <div class="col-md-3">
                                    <strong>Nombre:</strong>
                                    <p id="displayFirstName" class="mb-0">@Model.FirstName</p>
                                </div>
                                <div class="col-md-3">
                                    <strong>Apellido:</strong>
                                    <p id="displayLastName" class="mb-0">@Model.LastName</p>
                                </div>
                                <div class="col-md-4">
                                    <strong>Email:</strong>
                                    <p id="displayEmail" class="mb-0">@Model.Email</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card border-success mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="bi bi-box-seam"></i> Información del Producto</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <button type="button" class="btn btn-success btn-lg w-100" data-bs-toggle="modal" data-bs-target="#productModal">
                                <i class="bi bi-search"></i> BUSCAR PRODUCTO
                            </button>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-hover table-bordered" id="productsTable">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Código</th>
                                        <th>Nombre</th>
                                        <th class="text-end">Cantidad</th>
                                        <th class="text-end">Precio Unit.</th>
                                        <th class="text-end">Total</th>
                                        <th class="text-center">Acción</th>
                                    </tr>
                                </thead>
                                <tbody id="productsTableBody">
                                    <tr id="emptyRow" style="display: @(TempData["ValidDetailsJson"] == null ? "table-row" : "none")">
                                        <td colspan="6" class="text-center text-muted py-4">
                                            <i class="bi bi-inbox fs-1"></i>
                                            <p class="mb-0">No hay productos agregados</p>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <div class="row mt-4">
                            <div class="col-md-8"></div>
                            <div class="col-md-4">
                                <div class="card border-success">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between mb-2">
                                            <strong>Subtotal:</strong>
                                            <span id="subtotalAmount">$0.00</span>
                                        </div>
                                        <div class="d-flex justify-content-between mb-2">
                                            <strong>IVA (19%):</strong>
                                            <span id="taxAmount">$0.00</span>
                                        </div>
                                        <hr>
                                        <div class="d-flex justify-content-between">
                                            <strong class="fs-4 text-success">TOTAL:</strong>
                                            <strong class="fs-4 text-success" id="totalAmount">$0.00</strong>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12 text-center mb-4">
                        <button type="submit" id="btnGenerateInvoice" class="btn btn-primary btn-lg px-5 py-3" disabled>
                            <i class="bi bi-file-earmark-text fs-4"></i>
                            <span class="fs-5 ms-2">GENERAR FACTURA</span>
                        </button>
                    </div>
                </div>

                <input type="hidden" id="detailsJson" name="DetailsJson" />
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="customerModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title"><i class="bi bi-search"></i> Buscar Cliente</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <input type="text" id="customerSearchInput" class="form-control form-control-lg"
                           placeholder="Buscar por ID, Nombre, Apellido o Email...">
                </div>
                <div id="customerResults" class="list-group">
                    <p class="text-muted text-center">Cargando clientes...</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="productModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title"><i class="bi bi-search"></i> Buscar Producto</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <input type="text" id="productSearchInput" class="form-control form-control-lg"
                           placeholder="Buscar por Código o Nombre...">
                </div>
                <div id="productResults" class="row g-3">
                    <p class="text-muted text-center">Cargando productos...</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="quantityModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Cantidad a Agregar</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p><strong>Producto:</strong> <span id="modalProductName"></span></p>
                <p><strong>Stock Disponible:</strong> <span id="modalProductStock" class="text-success"></span></p>
                <hr>
                <label class="form-label fw-bold">Cantidad:</label>
                <input type="number" id="modalQuantityInput" class="form-control form-control-lg" min="1" value="1">
                <small class="text-danger d-none" id="stockError">Stock insuficiente</small>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-success" id="btnConfirmAdd">
                    <i class="bi bi-plus-circle"></i> Agregar
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    /* Estilos (Sin cambios) */
    .list-group-item:hover {
        background-color: #e7f3ff;
        cursor: pointer;
    }

    .product-card {
        border: 2px solid #dee2e6;
        border-radius: 8px;
        padding: 15px;
        transition: all 0.3s;
        cursor: pointer;
    }

        .product-card:hover {
            border-color: #28a745;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            transform: translateY(-2px);
        }

        .product-card.out-of-stock {
            opacity: 0.5;
            cursor: not-allowed;
            background-color: #f8f9fa;
        }

            .product-card.out-of-stock:hover {
                border-color: #dee2e6;
                transform: none;
            }
</style>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/invoice-modal.js"></script>

<script>
    // **NOTA IMPORTANTE:** Se asume que en tu 'invoice-modal.js' existen:
    // 1. Una variable global llamada 'invoiceDetails' (Array).
    // 2. Una función 'updateProductsTable()' que dibuja las filas de la tabla usando 'invoiceDetails'.
    // 3. Una función 'calculateTotals()' que calcula y actualiza los totales.
    // 4. Se debe inicializar invoiceDetails = [] en tu invoice-modal.js si no lo está.

    // 🔥 REHIDRATACIÓN DE DETALLES TRAS UN ERROR DE VALIDACIÓN 🔥
    // Usamos  para obtener el JSON sin codificación HTML
    const validDetailsJson = '@Html.Raw(TempData["ValidDetailsJson"])';

    // Verificamos si existe el JSON de productos válidos
    if (validDetailsJson && validDetailsJson !== '' && validDetailsJson !== 'null') {
        try {
            // Cargar los productos válidos desde TempData en la matriz de JavaScript
            const loadedDetails = JSON.parse(validDetailsJson);

            if (Array.isArray(loadedDetails) && loadedDetails.length > 0) {
                // Asignar los detalles válidos a la variable global (definida en invoice-modal.js)
                // Esto mantiene los productos que no causaron error.
                invoiceDetails = loadedDetails;

                // Ocultar la fila de "No hay productos"
                document.getElementById('emptyRow').style.display = 'none';

                // Actualizar la tabla, el JSON oculto del formulario y los totales
                // Estas funciones deben estar en tu archivo invoice-modal.js
                updateProductsTable();
                calculateTotals();

                // Si hay productos, habilitar el botón de generar factura
                document.getElementById('btnGenerateInvoice').disabled = false;
            } else {
                 // Si la lista está vacía después de los errores, asegurar la fila de vacío se muestre
                document.getElementById('emptyRow').style.display = 'table-row';
            }
        } catch (e) {
            console.error("Error al rehidratar los detalles válidos:", e);
            // En caso de error, limpiar la lista y mostrar la fila de vacío por seguridad.
            invoiceDetails = [];
            document.getElementById('emptyRow').style.display = 'table-row';
            calculateTotals();
        }
    } else {
        // Asegurar que si el Model está limpio o no hubo TempData, la tabla esté vacía.
        if (typeof invoiceDetails === 'undefined' || invoiceDetails.length === 0) {
            document.getElementById('emptyRow').style.display = 'table-row';
        }
    }

</script>