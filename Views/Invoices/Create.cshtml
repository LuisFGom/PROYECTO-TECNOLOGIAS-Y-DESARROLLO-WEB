@using InvoiceManagementSystem.ViewModels
@model InvoiceCreateVm
@{
    Layout = "_Layout";
    ViewData["Title"] = "Crear Nueva Factura";
}

<div class="container-fluid py-4">
    <!-- ENCABEZADO PRINCIPAL CON NÚMERO Y FECHA -->
    <div class="text-center mb-4">
        <h1 class="display-5 fw-bold">DATOS DE LA COMPRA</h1>

        <!-- NÚMERO DE FACTURA Y FECHA -->
        <div class="d-flex justify-content-between align-items-center mt-3 px-5">
            <div class="text-start">
                <h3 class="text-primary mb-0">Nº Factura: <span class="text-dark fw-bold">@Model.NextInvoiceNumber.ToString("D6")</span></h3>
            </div>
            <div class="text-end">
                <h3 class="text-primary mb-0">Fecha: <span class="text-dark fw-bold">@DateTime.Now.ToString("dd/MM/yyyy HH:mm")</span></h3>
            </div>
        </div>

        <hr class="border border-dark border-2 opacity-75 mt-3" />
    </div>

    <div class="card shadow-lg border-0">
        <div class="card-body p-4">
            <form id="invoiceForm" method="post" asp-action="Create">

                <!-- ========== SECCIÓN CLIENTE CON MODAL ========== -->
                <div class="card border-primary mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="bi bi-person-circle"></i> Datos del Cliente</h5>
                    </div>
                    <div class="card-body">
                        <!-- BOTÓN PARA ABRIR MODAL -->
                        <div class="mb-3">
                            <button type="button" class="btn btn-primary btn-lg w-100" data-bs-toggle="modal" data-bs-target="#customerModal">
                                <i class="bi bi-search"></i> BUSCAR CLIENTE
                            </button>
                        </div>

                        <!-- CLIENTE SELECCIONADO -->
                        <div class="card bg-light p-3" id="selectedCustomerCard" style="display:none;">
                            <h6 class="text-success mb-3"><i class="bi bi-check-circle"></i> Cliente Seleccionado</h6>
                            <div class="row">
                                <div class="col-md-2">
                                    <strong>ID:</strong>
                                    <p id="displayCustomerId" class="mb-0">-</p>
                                    <input type="hidden" id="CustomerID" name="CustomerID" />
                                </div>
                                <div class="col-md-3">
                                    <strong>Nombre:</strong>
                                    <p id="displayFirstName" class="mb-0">-</p>
                                </div>
                                <div class="col-md-3">
                                    <strong>Apellido:</strong>
                                    <p id="displayLastName" class="mb-0">-</p>
                                </div>
                                <div class="col-md-4">
                                    <strong>Email:</strong>
                                    <p id="displayEmail" class="mb-0">-</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- ========== SECCIÓN PRODUCTO CON MODAL ========== -->
                <div class="card border-success mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="bi bi-box-seam"></i> Información del Producto</h5>
                    </div>
                    <div class="card-body">
                        <!-- BOTÓN PARA ABRIR MODAL -->
                        <div class="mb-3">
                            <button type="button" class="btn btn-success btn-lg w-100" data-bs-toggle="modal" data-bs-target="#productModal">
                                <i class="bi bi-search"></i> BUSCAR PRODUCTO
                            </button>
                        </div>

                        <!-- TABLA DE PRODUCTOS -->
                        <div class="table-responsive">
                            <table class="table table-hover table-bordered" id="productsTable">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Código</th>
                                        <th>Nombre</th>
                                        <th class="text-end">Cantidad</th>
                                        <th class="text-end">Precio Unit.</th>
                                        <th class="text-end">Total</th>
                                        <th class="text-center">Acción</th>
                                    </tr>
                                </thead>
                                <tbody id="productsTableBody">
                                    <tr id="emptyRow">
                                        <td colspan="6" class="text-center text-muted py-4">
                                            <i class="bi bi-inbox fs-1"></i>
                                            <p class="mb-0">No hay productos agregados</p>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <!-- TOTALES A LA DERECHA -->
                        <div class="row mt-4">
                            <div class="col-md-8"></div>
                            <div class="col-md-4">
                                <div class="card border-success">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between mb-2">
                                            <strong>Subtotal:</strong>
                                            <span id="subtotalAmount">$0.00</span>
                                        </div>
                                        <div class="d-flex justify-content-between mb-2">
                                            <strong>IVA (19%):</strong>
                                            <span id="taxAmount">$0.00</span>
                                        </div>
                                        <hr>
                                        <div class="d-flex justify-content-between">
                                            <strong class="fs-4 text-success">TOTAL:</strong>
                                            <strong class="fs-4 text-success" id="totalAmount">$0.00</strong>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- BOTÓN GENERAR FACTURA -->
                <div class="row">
                    <div class="col-12 text-center mb-4">
                        <button type="submit" id="btnGenerateInvoice" class="btn btn-primary btn-lg px-5 py-3" disabled>
                            <i class="bi bi-file-earmark-text fs-4"></i>
                            <span class="fs-5 ms-2">GENERAR FACTURA</span>
                        </button>
                    </div>
                </div>

                <input type="hidden" id="detailsJson" name="DetailsJson" />
            </form>
        </div>
    </div>
</div>

<!-- ========== MODAL BUSCAR CLIENTE ========== -->
<div class="modal fade" id="customerModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title"><i class="bi bi-search"></i> Buscar Cliente</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <!-- BÚSQUEDA INTELIGENTE -->
                <div class="mb-3">
                    <input type="text" id="customerSearchInput" class="form-control form-control-lg"
                           placeholder="Buscar por ID, Nombre, Apellido o Email...">
                </div>
                <!-- RESULTADOS -->
                <div id="customerResults" class="list-group">
                    <p class="text-muted text-center">Cargando clientes...</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- ========== MODAL BUSCAR PRODUCTO ========== -->
<div class="modal fade" id="productModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title"><i class="bi bi-search"></i> Buscar Producto</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <!-- BÚSQUEDA INTELIGENTE -->
                <div class="mb-3">
                    <input type="text" id="productSearchInput" class="form-control form-control-lg"
                           placeholder="Buscar por Código o Nombre...">
                </div>
                <!-- RESULTADOS -->
                <div id="productResults" class="row g-3">
                    <p class="text-muted text-center">Cargando productos...</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- MODAL PARA INGRESAR CANTIDAD -->
<div class="modal fade" id="quantityModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Cantidad a Agregar</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p><strong>Producto:</strong> <span id="modalProductName"></span></p>
                <p><strong>Stock Disponible:</strong> <span id="modalProductStock" class="text-success"></span></p>
                <hr>
                <label class="form-label fw-bold">Cantidad:</label>
                <input type="number" id="modalQuantityInput" class="form-control form-control-lg" min="1" value="1">
                <small class="text-danger d-none" id="stockError">Stock insuficiente</small>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-success" id="btnConfirmAdd">
                    <i class="bi bi-plus-circle"></i> Agregar
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    .list-group-item:hover {
        background-color: #e7f3ff;
        cursor: pointer;
    }

    .product-card {
        border: 2px solid #dee2e6;
        border-radius: 8px;
        padding: 15px;
        transition: all 0.3s;
        cursor: pointer;
    }

        .product-card:hover {
            border-color: #28a745;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            transform: translateY(-2px);
        }

        .product-card.out-of-stock {
            opacity: 0.5;
            cursor: not-allowed;
            background-color: #f8f9fa;
        }

            .product-card.out-of-stock:hover {
                border-color: #dee2e6;
                transform: none;
            }
</style>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/invoice-modal.js"></script>